# ============================================
# üîß USDT Wallet Backend - PRODUCTION Environment
# ============================================
# ‚ö†Ô∏è CRITICAL: Fill in ALL values before deploying to production
# ‚ö†Ô∏è NEVER commit this file with real values to version control

# Application
NODE_ENV=production
PORT=3002
APP_URL=https://api.yourdomain.com
API_PREFIX=api
API_VERSION=v1

# Database (PostgreSQL) - Use SSL in production
DATABASE_URL="postgresql://username:STRONG_PASSWORD@your-db-host:5432/usdt_wallet?schema=public&sslmode=require"

# Redis (Required for production)
REDIS_ENABLED=true
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD

# JWT Authentication
# ‚ö†Ô∏è CRITICAL: Generate using: openssl rand -base64 64
JWT_SECRET=GENERATE_A_STRONG_64_CHAR_MINIMUM_SECRET_HERE
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Auth Behavior
AUTH_DIRECT_LOGIN=false

# OTP Settings
OTP_EXPIRATION_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTP_LOCKOUT_MINUTES=30

# Rate Limiting (stricter for production)
THROTTLE_TTL=60
THROTTLE_LIMIT=60
AUTH_THROTTLE_LIMIT=3
AUTH_THROTTLE_TTL=300

# CORS (your production domains)
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# Storage
STORAGE_PROVIDER=s3
AWS_BUCKET_NAME=your-bucket
AWS_REGION=your-region
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# External APIs
BINANCE_API_URL=https://api.binance.com/api/v3
GEMINI_API_KEY=your-gemini-api-key

# SMS Provider
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Provider
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Encryption (exactly 32 characters)
ENCRYPTION_KEY=GENERATE_32_CHAR_KEY_HERE_12345

# Security
BCRYPT_ROUNDS=12
SESSION_CLEANUP_INTERVAL=3600000
TRADE_EXPIRY_CHECK_INTERVAL=60000

# Logging
LOG_LEVEL=info
