# ============================================
# üîß USDT Wallet Backend - Environment Variables
# ============================================
# ‚ö†Ô∏è IMPORTANT: Copy this file to .env and fill in real values
# ‚ö†Ô∏è NEVER commit .env file to version control

# Application
NODE_ENV=development
PORT=3002
APP_URL=http://localhost:3002
API_PREFIX=api
API_VERSION=v1

# Database (PostgreSQL)
# For production: Use strong password and SSL connection
DATABASE_URL="postgresql://postgres:YOUR_STRONG_PASSWORD@localhost:5432/usdt_wallet?schema=public"

# Redis (Required for production)
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# JWT Authentication
# ‚ö†Ô∏è CRITICAL: Generate a strong random secret (min 64 characters)
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_MIN_64_CHARS
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Auth Behavior
AUTH_DIRECT_LOGIN=false

# OTP Settings
OTP_EXPIRATION_MINUTES=5
OTP_LENGTH=6
OTP_MAX_ATTEMPTS=5
OTP_LOCKOUT_MINUTES=30

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
AUTH_THROTTLE_LIMIT=5
AUTH_THROTTLE_TTL=300

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Storage
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=./uploads

# External APIs
BINANCE_API_URL=https://api.binance.com/api/v3
GEMINI_API_KEY=

# SMS Provider
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Provider
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@usdtwallet.com

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Encryption (32 characters exactly)
ENCRYPTION_KEY=CHANGE_THIS_32_CHARACTER_KEY_NOW

# Security
BCRYPT_ROUNDS=12
SESSION_CLEANUP_INTERVAL=3600000
TRADE_EXPIRY_CHECK_INTERVAL=60000
