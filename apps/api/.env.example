# ============================================
# ðŸ”§ USDT Wallet Backend - Environment Variables
# ============================================

# Application
NODE_ENV=development
PORT=3002
API_PREFIX=api
API_VERSION=v1

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/usdt_wallet?schema=public"

# Redis (set REDIS_ENABLED=false to use in-memory cache for dev)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Auth Behavior
AUTH_DIRECT_LOGIN=false

# OTP Settings
OTP_EXPIRATION_MINUTES=5
OTP_LENGTH=6

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# External APIs
BINANCE_API_URL=https://api.binance.com/api/v3
GEMINI_API_KEY=

# SMS Provider (Twilio example)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email Provider (SendGrid example)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@usdtwallet.com

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
